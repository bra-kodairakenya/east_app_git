<h1>参加フォーム</h1>

<%= form_for :participation,　class: :'form-horizontal', url: participations_path do |f| %>
<!-- エラーメッセージ start-->
<% if @participation.errors.any? %>
  <h2><%= @participation.errors.count %>件のエラーが発生したため保存ができませんでした。</h2>
  <ul>
      <% @participation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>
<!-- エラーメッセージ end-->

  <fieldset>
    <div class="form-group">
      <%= f.label :name, '名前', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: :'form-control', id: :'inputEmail', placeholder: :'Name' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :telphone, '電話番号', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :telphone, class: :'form-control', id: :'inputEmail', placeholder: :'telephone_number' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :mail, 'メールアドレス', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :mail, class: :'form-control', id: :'inputEmail', placeholder: :'mail_adress' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :publish, '出欠席の確認', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :publish, class: :'form-control', id: :'inputEmail', placeholder: :'出席 or 欠席 or 未定' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, '希望予算', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :price, class: :'form-control', id: :'inputEmail', placeholder: :'例: 3000' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, 'その他質問など', class: :'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :content, class: :'form-control', id: :'textArea', rows: 3 %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit '送信', class: :'btn btn-primary' %>
      </div>
    </div>
  </fieldset>

<% end %>